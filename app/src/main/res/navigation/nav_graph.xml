<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registerFragment">

    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.vacral.notepadapply.ui.main.on_board.OnBoardFragment"
        tools:layout="@layout/fragment_on_board">

        <action
            android:id="@+id/action_OnBoardFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/onBoardFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_onBoardFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.vacral.notepadapply.ui.main.main.MainFragment"
        tools:layout="@layout/fragment_main_activity" >
        <action
            android:id="@+id/action_mainFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_mainFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.vacral.notepadapply.ui.main.add_note.AddNoteFragment"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_add_note">
        <argument
            android:name="note"
            app:argType="com.vacral.notepadapply.data.local.model.NoteModel"
            app:nullable="true"
            />

    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.vacral.notepadapply.ui.main.reg_note.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
    </fragment>

</navigation>
