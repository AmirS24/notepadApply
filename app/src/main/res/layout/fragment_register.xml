<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.reg_note.RegisterFragment"
    android:background="@color/dark"
    >
    <TextView
        android:id="@+id/tv_notes_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/potta_one"/>
    <ImageView
        android:id="@+id/iv_note"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/ic_note"
        app:layout_constraintTop_toBottomOf="@id/tv_notes_reg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="140dp"
        />
    <TextView
        android:id="@+id/tv_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:text="Авторизация"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/iv_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/btn_reg_google"
        android:layout_height="54dp"
        android:backgroundTint="@color/white"
        android:text="Sing in with Google"
        android:textColor="@color/black"
        app:icon="@drawable/ic_logo_google"
        app:iconGravity="textStart"
        app:iconTint="@null"
        app:cornerRadius="20dp"
        app:iconSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_reg"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>