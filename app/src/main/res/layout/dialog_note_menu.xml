<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="0dp">

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:text="Удалить"
        android:textAlignment="textStart"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/gray_dark"/>

    <ImageView
        android:id="@+id/iv_trash"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="@id/btn_delete"
        app:layout_constraintTop_toTopOf="@id/btn_delete" />

    <View
        android:id="@+id/v_stroke"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete"
        app:layout_constraintBottom_toTopOf="@+id/tv_color_name"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_color_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Поменять цвет"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/btn_delete" />

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:columnCount="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_color_name">

        <FrameLayout
            android:id="@+id/containerYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">

            <View
                android:id="@+id/color_yellow"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@color/yellow" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/containerPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">

            <View
                android:id="@+id/v_purple"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@color/purple" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/containerPink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">

            <View
                android:id="@+id/v_pink"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@color/pink" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/containerWhite_pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">

            <View
                android:id="@+id/color_White_pink"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@color/white_pink" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/containerGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">

            <View
                android:id="@+id/v_green"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@color/green" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container_light_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">

            <View
                android:id="@+id/v_light_green"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@color/light_green" />
        </FrameLayout>


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>