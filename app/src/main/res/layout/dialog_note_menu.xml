<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_dialog">
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Удалить"
        android:textColor="@color/red"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintStart_toEndOf="@id/tv_delete"
        app:layout_constraintTop_toTopOf="@id/tv_delete"
        android:layout_marginTop="2dp"
        android:layout_marginStart="60dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/tv_delete"
        android:layout_marginVertical="8dp"/>
    <TextView
        android:id="@+id/tv_color_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поменять цвет"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_delete"
        android:textSize="14dp"
        android:layout_marginTop="12dp"/>

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_color_name"
        android:layout_marginTop="8dp">
        <FrameLayout
            android:id="@+id/containerYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">
        <View
            android:id="@+id/color_yellow"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:background="@color/yellow"
            android:layout_margin="4dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/containerPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">
        <View
            android:id="@+id/v_purple"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:background="@color/purple"
            android:layout_margin="4dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/containerPink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">
        <View
            android:id="@+id/v_pink"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:background="@color/pink"
            android:layout_margin="4dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/containerWhite_pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">
        <View
            android:id="@+id/color_White_pink"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:background="@color/white_pink"
            android:layout_margin="4dp"
            />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/containerGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">
        <View
            android:id="@+id/v_green"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:background="@color/green"
            android:layout_margin="4dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/container_light_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@null">
        <View
            android:id="@+id/v_light_green"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:background="@color/light_green"
            android:layout_margin="4dp"/>
    </FrameLayout>







    </GridLayout>





</androidx.constraintlayout.widget.ConstraintLayout>