<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark"
    tools:context="com.vacral.notepadapply.ui.main.add_note.AddNoteFragment"
    >



        <ImageView
            app:layout_constraintWidth="20dp"
            app:layout_constraintHeight="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/time_day"
            app:layout_constraintStart_toEndOf="@id/iv_back"
            app:layout_constraintTop_toTopOf="@id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="30 мая"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

<!--        <TextView-->
<!--            android:id="@+id/time_hourse"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="100dp"-->
<!--            android:text="17:42"-->
<!--            android:textColor="@color/gray"-->
<!--            android:textSize="14sp"-->
<!--            android:textStyle="bold" />-->

        <ImageView
            app:layout_constraintWidth="20dp"
            app:layout_constraintHeight="20dp"
            android:id="@+id/iv_setColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="340dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_set_color"
            app:layout_constraintEnd_toStartOf="@id/tv_complete"
            app:layout_constraintTop_toTopOf="@id/iv_back"
            android:layout_marginEnd="20dp"/>
    
    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Готово"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        android:layout_marginEnd="20dp"
        />



    <EditText
        android:background="@android:color/transparent"
        android:id="@+id/et_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:hint="Title"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>
    <EditText
        android:id="@+id/et_desc"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        android:textColor="@color/white"
        android:hint="text"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>